        <view class="introPrice">£255 起/周</view>
        <view class="introText">限时高额返现，拼团更实惠</view>
      </view>
      <view class="houseIntroduce">
        <image src="../../images/intro9.jpg" class="introImg"></image>
        <image src="../../images/定位.png" class="introLogo"></image>
