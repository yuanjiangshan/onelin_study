  .content {
    width: 100%;
    background: #181616;
    padding-top: 10rpx;
  }

  .animation {
    width: 96%;
    padding-top: 20rpx;
    padding-bottom: 50rpx;
    margin-left: 10rpx;
    margin-bottom: 30rpx;
    border: 5rpx solid #7D7777;
    border-radius: 20rpx;
  }
  .content_title {
    width: 93%;
    height: 150rpx;
    color: white;
    font-size: 50rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    border: 5rpx solid #7D7777;
    border-radius: 40rpx;
    margin-bottom: 50rpx;
    margin-left: 20rpx;
  }

.box {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.icon {
  width: 70rpx;
  height: 70rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  margin-right: 30rpx;
}

.catalog {
  display: flex;
  justify-content: center;
  align-items: center;
}

.list {
  width: 45%;
  font-size: 40rpx;
  color: white;
  border: 5rpx solid #7D7777;
  border-radius: 20rpx;
  margin: 5rpx;
  
}

.list_content {
  text-align: center;
}

.animation_video {
  padding-bottom: 0rpx;
}

.video {
  width: 75%;
  height: 250rpx;
  margin-left: 90rpx;
  position: relative;
  margin-bottom: 50rpx;
}

.video_img {
  width: 100%;
  height: 100%;
}

.clickIcon {
  position: absolute;
  width: 70rpx;
  height: 70rpx;
  right: 30rpx;
  top: 170rpx;
}
