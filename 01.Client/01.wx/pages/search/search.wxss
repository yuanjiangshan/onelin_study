/* pages/search/search.wxss */
.box{
  width: 100%;
  display: flex;
  flex-direction: column;
}
.searchBox{
  width:94%;
  height: 100rpx;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}
.searchlogo{
  width: 35rpx;
  height: 35rpx;
  position: absolute;
  left: 5%;
}
.searchInput{
  width: 94%;
  height: 80%;
  background: #FAFAFA;
  border-radius: 50rpx;
  border: 1rpx solid #D1D1D1;
  padding-left: 12%;
}


.contentBox{
  width: 95%;
  height: 200rpx;
  /* background: palegoldenrod; */
  margin: 0 auto;
  margin-top: 50rpx;
  display: flex;
  flex-direction: column;
}
.contentTitle{
  color: #A8A8A8;
  font-size: 30rpx;
  margin-bottom: 10rpx;
}
.placeBox{
  width: 100%;
  display: flex;
}
.placeText{
  padding: 10rpx 20rpx;
  border-radius: 50rpx;
  border: 1px solid #C6C6C6;
  margin-right: 20rpx;
  color: #6B6B6B;
}

.historyBox{
  display: flex;
  align-items: center;
  justify-content: center;
}
.history{
  margin-top: 30rpx;
  padding: 5rpx 10rpx;
  background: #F1F0F5;
  color: #A5A4A9;
}
.line{
  width: 20%;
  height: 5rpx;
  background: #F1F0F5;
  position: relative;
  top: 20%;
}